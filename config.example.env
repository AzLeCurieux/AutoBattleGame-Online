# Configuration pour AutoBattleGame Online
# Copiez ce fichier vers .env et modifiez les valeurs

# Clé secrète JWT (changez en production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Port du serveur
PORT=3000

# Environnement (development/production)
NODE_ENV=development

# Configuration de la base de données
DB_PATH=./database/game.db

# Limites de sécurité
MAX_LOGIN_ATTEMPTS=5
LOGIN_WINDOW_MS=900000

# Configuration anti-triche
SCORE_VALIDATION=true
ACTION_VALIDATION=true
RATE_LIMITING=true
